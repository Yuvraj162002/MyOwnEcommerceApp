<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddAdress">


    <TextView
        android:id="@+id/TV_add_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="48dp"
        android:text="Create Address"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TV_address_lane"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address Lane"
        app:boxCornerRadiusTopStart="6dp"
        app:boxCornerRadiusBottomEnd="6dp"
        app:boxCornerRadiusTopEnd="6dp"
       android:layout_marginTop="170dp"
        android:textColorHint="@color/black"
       android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"

        tools:layout_editor_absoluteX="0dp"
      app:layout_constraintTop_toBottomOf="@id/TV_add_adress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="113dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:padding="25dp"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TV_city"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City"
        app:boxCornerRadiusTopStart="6dp"
        app:boxCornerRadiusBottomEnd="6dp"
        app:boxCornerRadiusTopEnd="6dp"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="15dp"
        android:textColorHint="@color/black"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"

        tools:layout_editor_absoluteX="0dp"
       app:layout_constraintTop_toBottomOf="@id/TV_address_lane"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="113dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:padding="25dp"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TV_postalcode"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Postal Code"
        app:boxCornerRadiusTopStart="6dp"
        app:boxCornerRadiusBottomEnd="6dp"
        app:boxCornerRadiusTopEnd="6dp"
        android:textColorHint="@color/black"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"

        tools:layout_editor_absoluteX="0dp"
       app:layout_constraintTop_toBottomOf="@id/TV_city"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="113dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:padding="25dp"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TV_phoneNo"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        app:boxCornerRadiusTopStart="6dp"
        app:boxCornerRadiusBottomEnd="6dp"
        app:boxCornerRadiusTopEnd="6dp"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColorHint="@color/black"
        android:layout_marginBottom="15dp"

        tools:layout_editor_absoluteX="0dp"
       app:layout_constraintTop_toBottomOf="@id/TV_postalcode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="113dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:padding="25dp"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_address"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        app:boxCornerRadiusTopStart="6dp"
        app:boxCornerRadiusBottomEnd="6dp"
        app:boxCornerRadiusTopEnd="6dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"

        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="113dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:padding="25dp"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_add_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD ADDRESS"
        app:layout_constraintTop_toBottomOf="@id/TV_phoneNo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="649dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ecommerce.android.myownecommerceapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyOwnEcommerceApp">
        <activity
            android:name=".activities.PaymentActivity"
            android:exported="true" />
        <activity
            android:name=".activities.AddAdress"
            android:exported="true" />
        <activity
            android:name=".activities.AddressActivity"
            android:exported="true" />
        <activity
            android:name=".activities.CartActivity"
            android:exported="true" />
        <activity
            android:name=".activities.CategoryView"
            android:exported="true" />
        <activity
            android:name=".activities.ViewAllActivity"
            android:exported="true"
            android:label="All Items"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ProductDetailedActivity"
            android:exported="true"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".activities.OnBoardingActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true" />
        <activity android:name=".activities.RegistrationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.razorpay.Apikey"
            android:value="rzp_test_KxnYXnzAZE0GGp" />
    </application>

</manifest>